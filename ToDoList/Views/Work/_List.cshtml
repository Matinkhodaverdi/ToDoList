@using ToDoList.Model.Models
@model IEnumerable<Work>

@foreach (var item in Model)
{
    <tr>
        <td width="10%">
            <input type="checkbox" @(item.IsActive ? "checked" : "") />
        </td>
        <td width="60%">
            @item.Name
        </td>
        <td width="10%">
            @item.Date
        </td>
      
        <td width="20%">
            <a href="/Work/Edit/@item.Id" class="btn btn-xs btn-outline-warning">
                <i class="fa fa-edit"></i>
            </a>
            <a href="#" onclick="myDelete('@item.Id')" class="btn btn-xs btn-outline-danger">
                <i class="fa fa-trash"></i>
            </a>
        </td>

    </tr>
}
@section Scripts
    {
    <script>
        function myDelete(id) {
            swal({
                title: "تأیید حذف",
                text: "آیا از حذف این مقدار اطمینان دارید؟",
                icon: "warning",
                buttons: ['لغو', 'بلی'],
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        window.open('/Work/Delete/' + id, '_parent');
                    }
                });
        }
    </script>
}